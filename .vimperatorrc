set focuscontent
set visualbell
highlight Bell display:none
set complete=sl

" hint characters
set hintchars=aoeuidhtns
" hint font and color
highlight Hint color: #d3381c; font-family: Arial; font-size: 16px; font-weight: bold; text-shadow: -1px -1px 2px black, 1px -1px 2px black, -1px 1px 2px black, 1px 1px 2px black;
highlight HintElem color: gray; background-color: #ale4e6;
highlight HintActive color: black; background-color: #ff8700;

noremap s :open<Space>google<Space>
noremap ,s :tabopen<Space>google<Space>
nnoremap <Leader>pc :<C-u>panorama<Space>

" increase the amount of movement
noremap j 5j
noremap k 5k

" restart
map <C-r> :restart<CR>
" reload vimperatorrc
map R :source ~/.vimperatorrc<CR>

" move tab
map <C-l> :tabmove! +1<CR>
map <C-h> :tabmove! -1<CR>

" undo list
nnoremap U :undo<Space>

" error color
hi ErrorMsg color:white; background-color: #ec6aa1;

nnoremap <Leader>pc :<C-u>panorama<Space>
nnoremap <Leader>ps :<C-u>panorama switch<Space>
nnoremap <Leader>pa :<C-u>panorama add<Space>
nnoremap <Leader>pl :<C-u>panorama list<CR>
nnoremap <Leader>pp :<C-u>panorama pushtab<Space>
nnoremap <Leader>pu :<C-u>panorama pulltab<Space>
nnoremap <Leader>pr :<C-u>panorama remove<Space>
nnoremap <Leader>pv <C-S-e>

source ~/.vimperator/vimppm/vimppm/plugin/vimppm.js
vimppm 'twittperator.js'

let g:twittperator_use_ssl_connection_for_api_ep = 1
let g:twittperator_use_chirp = 1
nnoremap ,wl :tw<CR>
nnoremap ,ww :tw<Space>

echo "vimperatorrc loaded"
